<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%%= link_to 'List', <%= controller_routing_path %>_path  %></li>
      <li><%%= link_to 'New', new_<%= singular_controller_routing_path %>_path %></li>
      <li class="active"><%%= link_to 'Show', <%= singular_controller_routing_path %>_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      <% columns.each do |column| %>
        <p>
          <b><%= column.name.capitalize %>:</b>
          <%%= @<%= resource_name %>.<%= column.name %> %>
        </p>
      <%- end -%>
      <%%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_<%= singular_controller_routing_path %>_path(@<%= resource_name %>), :class => "button" %> 
      <%%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "Edit")} Delete", <%= singular_controller_routing_path %>_path(@<%= resource_name %>), :method => "delete", :class => "button", :confirm => "Are you sure?" %> 
      <div class="clear"></div>
    </div>
  </div>
</div>

<%% content_for :sidebar, render(:partial => 'sidebar') -%>