<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to t(:anketa_all), poll_anketas_path(@poll)  %></li>
      <li><%= link_to t(:new_anketa), new_poll_anketa_path(@poll ) %></li>
      <li class="active"><%= link_to t(:show_anketa), poll_anketas_path(@poll) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
              <p>
          <b><%=t:code%>:</b>
          <%= @anketa.code %>
        </p>

        <p>
          <b><%=t:description%>:</b>
          <%= @anketa.description %>
        </p>

       
      <%= link_to t(:edit_button, :img=>image_tag("web-app-theme/application_edit.png", :alt =>  t(:edit))), edit_poll_anketa_path(@poll,@anketa), :class => "button" %>
      <%= link_to t(:delete_button, :img=>image_tag("web-app-theme/cross.png", :alt =>  t(:edit))), poll_anketa_path(@poll,@anketa), :method => "delete", :class => "button", :confirm => "Are you sure?" %>
      <div class="clear"></div>
    </div>

     <div class="inner">
<h3><%=t:questions_all %></h3>
    <table class="table">
        <tr>
         <th><%=t:question%></th>
					<th><%=t:qtype%></th>

          
          <th><div align="right"><%=t :options %></div></th>
        </tr>
        <% @anketa.questions.each do |question| -%>
        <tr class="<%= cycle("odd", "even") %>">
          

					<td>
						<%= link_to question.body, poll_anketa_question_path(@poll,@anketa,question) %>
					</td>

					<td>
            <%= question.qtype %>
          </td>
          <td class="last">
            <%= link_to 'edit', edit_poll_anketa_question_path(@poll,@anketa,question) %> |
            <%= link_to 'destroy', poll_anketa_question_path(@poll,@anketa,question), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>
        <% end -%>
      </table>
    </div>

  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>