<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', poll_anketas_path(@poll)  %></li>
      <li><%= link_to 'New', new_poll_anketa_path(@poll) %></li>
      <li class="active"><%= link_to 'Show', poll_anketas_path(@poll) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Title:</b>
          <%= @anketa.title %>
        </p>

        <p>
          <b>Code:</b>
          <%= @anketa.code %>
        </p>

        <p>
          <b>Description:</b>
          <%= @anketa.description %>
        </p>

        <p>
          <b>Poll_id:</b>
          <%= @anketa.poll_id %>
        </p>

      <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "Edit")} Edit", edit_poll_anketa_path(@poll,@anketa), :class => "button" %>
      <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "Edit")} Delete", poll_anketa_path(@poll,@anketa), :method => "delete", :class => "button", :confirm => "Are you sure?" %>
      <div class="clear"></div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>