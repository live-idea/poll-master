<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li><%= link_to t(:anketas_all), poll_path(@poll) %></li>
      <li class="active"><%= link_to t(:edit), edit_poll_anketa_path(@poll) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t:edit_anketa%></h2>
    <div class="inner">
      <%= error_messages_for :anketa%>
      <% form_for @anketa, :url => poll_anketa_path(@poll,@anketa), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>