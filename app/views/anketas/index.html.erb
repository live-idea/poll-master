<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li><%= link_to t(:anketa_new), new_poll_anketa_path(@poll) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title"><%=t :anketa_all %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first"><%=t :ID_number %></th>
					
					<th><%=t :title_name %></th>
					
          <th><%=t :poll_start_date %></th>
          <th><div align="right"><%=t :options %></div></th>
        </tr>
        <% @anketas.each do |anketa| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= anketa.id %>
          </td>
					
					<td>
						<%= link_to anketa.title, poll_anketa_path(@poll,anketa) %>
					</td>
					
					<td>
            <%= l( anketa.created_at.to_date, :format=> :default)%>
          </td>
          <td class="last">
            <%= link_to t(:show), poll_anketa_path(@poll,anketa) %> |
            <%= link_to t(:edit), edit_poll_anketa_path(@poll,anketa) %> |
            <%= link_to t(:destroy), poll_anketa_path(@poll,anketa), :method => :delete, :confirm => t(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @anketas  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>