<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', polls_path %></li>
      <li><%= link_to 'New', new_poll_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Polls</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
					
					<th>Title</th>
					
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @polls.each do |poll| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= poll.id %>
          </td>
					
					<td>
						<%= link_to poll.title, poll_path(poll) %>
					</td>
					
					<td>
            <%= poll.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', poll_path(poll) %> |
            <%= link_to 'edit', edit_poll_path(poll) %> |
            <%= link_to 'destroy', poll_path(poll), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @polls  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>