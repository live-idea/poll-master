<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to t(:polls_all), polls_path %></li>
      <li><%= link_to t(:poll_new), new_poll_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title"> <%=t :polls_all %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first"><%=t :ID_number %> </th>
					
	  <th><%=t :title_name %></th>

          <th><%=t :poll_branch %></th>
          <th><%=t :poll_state %></th>
          <th><%=t :poll_start_date %></th>
          <th class="last"> <%=t :options %></th>

        </tr>
        <% @polls.each do |poll| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= poll.id %>
          </td>

  	  <td>
	    <%= link_to poll.title, poll_path(poll) %>
	  </td>
					
	  <td>
            <%= poll.branch %>
          </td>
          
          <td>
            <%= poll.state %>
          </td>

          <td>
            <%= l( poll.created_at.to_date, :format=> :default)%>
          </td>

          <td>
            <%= link_to t(:show), poll_path(poll) %> |
            <%= link_to t(:edit), edit_poll_path(poll) %> |
            <%= link_to t(:destroy), poll_path(poll), :method => :delete, :confirm => t(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @polls  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>