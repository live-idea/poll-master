<div class="block">

  <%if current_user%>
    <div class="secondary-navigation">
      <ul>
        <li><%= link_to t(:clear_form), new_poll_anketa_result_path(@poll,@anketa) %></li>
      </ul>
      <div class="clear"></div>
    </div>
  <%else%>
    <div class="content"> 
      <h1><%=@anketa.title%></h1>
    </div>
  <%end%>
  <div class="content">            
    <div class="inner">
      <%if @result.errors.any?%>
        <div id="errorExplanation" class="errorExplanation">
          <%=t:field_can_not_be_empty%>
        </div>
      <%end%>


      <% form_for :result, :url => poll_anketa_results_path(@poll,@anketa), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>