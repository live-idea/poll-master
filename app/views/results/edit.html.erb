<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li><%= link_to t(:results_all), poll_anketa_results_path(@poll,@anketa) %></li>
      <li class="active"><%= link_to t(:clear_form), edit_poll_anketa_result_path(@poll,@anketa) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t:result_edit%></h2>
    <div class="inner">


      <%if @result.errors.any?%>
        <div id="errorExplanation" class="errorExplanation">
          <%=t:field_can_not_be_empty%>
        </div>
      <%end%>


      <% form_for @result, :url => poll_anketa_result_path(@poll,@anketa,@result), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>