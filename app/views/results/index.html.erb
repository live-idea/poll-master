<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li><%= link_to t(:result_new), new_poll_anketa_result_path(@poll,@anketa) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title"><%=t:results_all%></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first"><%=t :ID_number %></th>
					
	  <th><%=t :title_name %></th>
					
          <th><%=t :result_start_date %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @results.each do |result| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= result.id %>
          </td>
					
          <td>
		<%= link_to result.anketa.title, poll_anketa_result_path(@poll,@anketa,result) %>
          </td>
					
	  <td>
            <%=  l( result.created_at.to_date, :format=> :default)%>
          </td>
          <td class="last">
            <%= link_to t(:show), poll_anketa_result_path(@poll,@anketa,result) %> |
            <%= link_to t(:edit), edit_poll_anketa_result_path(@poll,@anketa,result) %> |
            <%= link_to t(:destroy), poll_anketa_result_path(@poll,@anketa,result), :method => :delete, :confirm => t(:are_you_sure) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @results  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>