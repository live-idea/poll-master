<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li><%= link_to t(:result_new), new_poll_anketa_result_path(@poll,@anketa) %></li>
      <li><%= link_to t(:analiz), analize_poll_anketa_results_path(@poll,@anketa) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title"><%=t:results_all%></h2>

    <table><tr><% @anketa.questions.each do |question| -%>
          <td id="q_<%=question.id%>">
            <strong><%=  question.body %></strong>
          </td>
      <% end -%></tr></table>

    <div class="inner">
      <table>
        <% @results.each do |result| -%>
          <tr> <% result.answers.each do |answer| -%>

              <td><%=answer.body %>: </td>



          <% end %></tr>
        <% end %>
      </table>
      <div class="clear"></div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>