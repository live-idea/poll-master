<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to t(:results_all), poll_anketa_results_path(@poll,@anketa)  %></li>
      <li class="active"><%= link_to t(:show), poll_anketa_result_path(@poll,@anketa) %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
       <% @result.answers.each do |answer| -%>
        <p>
          <b><%=answer.question.body %>: </b>
          <%= case answer.body
              when "true" then t(:boolean_type_true)
              when "false" then t(:boolean_type_false)
              else answer.body
              end
          %>
        </p>

      <% end %>

      <%= link_to t(:edit_img, :img =>image_tag("web-app-theme/application_edit.png", :alt => t(:edit))), edit_poll_anketa_result_path(@poll,@anketa,@result), :class => "button" %>
      <%= link_to t(:destroy_img, :img=>image_tag("web-app-theme/cross.png", :alt => t(:destroy))), poll_anketa_result_path(@poll,@anketa,@result), :method => "delete", :class => "button", :confirm => t(:are_you_sure) %>
      <div class="clear"></div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>