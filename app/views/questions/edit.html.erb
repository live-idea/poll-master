<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to t(:questions_all), poll_anketa_questions_path(@poll,@anketa)  %></li>
      <li><%= link_to t(:question_new), new_poll_anketa_question_path(@poll,@anketa) %></li>
          </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title"><%=t:question_edit%></h2>
    <div class="inner">
      <%= error_messages_for :question%>
      <% form_for @question, :url => poll_anketa_question_path(@poll,@anketa,@question), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>